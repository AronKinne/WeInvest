<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WeInvest.WPF.Views.Controls">

    <ControlTemplate x:Key="WindowTemplate" TargetType="Window">
        <Border Background="{StaticResource SecondaryBrush}" BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <controls:TitleBar Grid.Row="0"/>
                
                <ContentPresenter Content="{TemplateBinding Content}" Grid.Row="1"/>
            </Grid>
        </Border>
    </ControlTemplate>
    
</ResourceDictionary>