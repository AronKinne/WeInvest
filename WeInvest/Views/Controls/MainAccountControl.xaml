<UserControl x:Class="WeInvest.Views.Controls.MainAccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeInvest.Views.Controls"
             xmlns:charts="clr-namespace:WeInvest.Controls.Charts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel Background="LightGoldenrodYellow">
        <Slider DockPanel.Dock="Bottom" Margin="100,20"
                Minimum="0" Maximum="{Binding MaxAccountIndex}"
                Value="{Binding DisplayedAccountIndex}"
                TickPlacement="BottomRight" IsSnapToTickEnabled="True"/>

        <charts:PieChart PieSeries="{Binding PieSeries}" Margin="75"/>
    </DockPanel>
</UserControl>
