<Window x:Class="WeInvest.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeInvest"
        xmlns:vm="clr-namespace:WeInvest.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450" Width="800"
        DataContext="{StaticResource ViewModel}">
    
    <Grid>

        <Ellipse Margin="100,100,0,0" Fill="Transparent" Width="200" Height="200" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <vm:PieChart x:Name="piec" PieSeries="{Binding PieSeries}" CenterX="200" CenterY="200" Radius="100"/>

        <Button Content="Deposit" Command="{Binding DepositCommand}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"/>

        <Slider Minimum="0" Maximum="{Binding MaxAccountIndex}" Value="{Binding DisplayedAccountIndex}"
                VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="50" Width="250"
                TickPlacement="BottomRight" IsSnapToTickEnabled="True"/>



    </Grid>
</Window>
